/* pages/details/newsDetails.wxss */

.newsDetails-wrapper {
  margin: 0 40rpx;
}

.newsTitle {
  font-size: 40rpx;
  line-height: 56rpx;
  margin: 40rpx 0;
  text-align: center;
  font-weight: bold;
}

.newsInfo {
  display: flex;
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 40rpx;
}

.newsSource {
  margin-right: 40rpx;
}

.newsDate {
  flex-grow: 1;
}

.newsRichText {
  font-size: 30rpx;
  line-break: 42rpx;
}

