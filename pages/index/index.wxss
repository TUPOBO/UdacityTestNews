.newsTypes {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  margin-bottom: 30rpx;
}

.newsTypes-items {
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  
}

.newsList-wrapper {
  display: flex;
  flex-direction: column;
  margin: 0 40rpx;
}

.newsList {
  display: flex;
  align-items: center;
  height: 200rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.newsInfo {
  display: flex;
  align-items: center;
}

.newsTextInfo {
  display: flex;
  flex-direction: column;
  margin-right: 40rpx;
  width: 440rpx;
  
}

.newsTitle {
  font-size: 30rpx;
  line-break: 42rpx;
  margin-bottom: 40rpx;
}

.newsCopyright {
  display: flex;
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(0,0,0,0.5);
}

.newsSource {
  margin-right: 20rpx;
}

.newsFirstImage {
  width: 180rpx;
  height: 180rpx;
  padding: 10rpx;
}

image {
  width: 100%;
  height: 100%;
}

.active {
  color: red;
  border-bottom: 2px solid red;
}